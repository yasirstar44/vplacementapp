<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/editText3"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="448dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="18dp"
        android:inputType="textPersonName"
        android:text="MANAGEMENT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="124dp"
        android:layout_height="140dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/acirclebutton"
        android:foreground="@drawable/student"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="studentfunc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/acirclebutton"
        android:foreground="@drawable/asdfg"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="managementfunc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="448dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:ems="10"

        android:inputType="textPersonName"
        android:text="STUDENT"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="415dp"
        android:layout_height="135dp"
        android:background="@drawable/timthumb"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>